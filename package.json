{
  "name": "ui-match",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.19 <21 || >=22.12"
  },
  "scripts": {
    "ci:postinstall": "pnpm exec playwright install --with-deps chromium",
    "doctor": "bun run packages/uimatch-plugin/src/cli/index.ts doctor",
    "pretest": "bun ./packages/uimatch-core/scripts/generate-fixtures.ts",
    "test": "UIMATCH_LOG_LEVEL=silent bun test --recursive packages/*/src/**/*.test.ts packages/*/src/**/__tests__/**/*.test.ts",
    "test:all": "UIMATCH_ENABLE_BROWSER_TESTS=true UIMATCH_HEADLESS=true UIMATCH_LOG_LEVEL=silent bun test --recursive packages/*/src/**/*.test.ts packages/*/src/**/__tests__/**/*.test.ts",
    "test:coverage": "UIMATCH_LOG_LEVEL=silent bun test --coverage --recursive packages/*/src/**/*.test.ts packages/*/src/**/__tests__/**/*.test.ts",
    "test:coverage:html": "UIMATCH_LOG_LEVEL=silent bun test --coverage --recursive packages/*/src/**/*.test.ts packages/*/src/**/__tests__/**/*.test.ts",
    "test:e2e:bun": "UIMATCH_ENABLE_BROWSER_TESTS=true UIMATCH_HEADLESS=true bun test --jobs=1 --timeout 60000 packages/uimatch-plugin/src/cli/__tests__/smoke.test.ts packages/uimatch-plugin/src/cli/__tests__/e2e-outdir.test.ts packages/uimatch-plugin/src/commands/__tests__/selector-resolution-e2e.test.ts",
    "test:e2e": "npx playwright test e2e/",
    "test:compare": "bun ./scripts/test-compare.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:types": "bun run --filter @uimatch/shared-logging build && bun run --filter uimatch-scoring build && bun run --filter @uimatch/selector-spi build",
    "build": "bun run --filter @uimatch/shared-logging build && bun run --filter uimatch-scoring build && bun run --filter @uimatch/selector-spi build && bun run --filter @uimatch/selector-anchors build && bun run --filter uimatch-plugin build",
    "type-check": "bun run build:types && bun run type-check:plugin && bun run type-check:selector-anchors && bun run type-check:e2e",
    "type-check:plugin": "cd packages/uimatch-plugin && tsc --noEmit",
    "type-check:selector-anchors": "cd packages/uimatch-selector-anchors && tsc --noEmit",
    "type-check:e2e": "cd e2e && tsc --noEmit",
    "check": "bun run lint && bun run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "uimatch:current": "bun run scripts/uimatch-current.ts",
    "uimatch:compare": "bun run packages/uimatch-plugin/src/cli/index.ts compare",
    "uimatch:loop": "bun run scripts/uimatch-loop.ts",
    "uimatch:suite": "bun run packages/uimatch-plugin/src/cli/index.ts suite",
    "uimatch:settings": "bun run scripts/uimatch-settings.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "@types/pngjs": "^6.0.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "jsep": "^1.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "parse5": "^8.0.0"
  }
}
