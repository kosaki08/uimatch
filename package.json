{
  "name": "ui-match",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "postinstall": "bunx playwright install chromium",
    "ci:postinstall": "bunx playwright install --with-deps chromium",
    "build": "tsc -b",
    "pretest": "bun ./packages/uimatch-core/scripts/generate-fixtures.ts",
    "test": "bun test --recursive",
    "test:compare": "bun ./scripts/test-compare.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "check": "bun run lint && bun run type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "uimatch:current": "bun run scripts/uimatch-current.ts",
    "uimatch:compare": "bun run scripts/uimatch-compare.ts",
    "uimatch:loop": "bun run scripts/uimatch-loop.ts",
    "uimatch:settings": "bun run scripts/uimatch-settings.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "@types/pngjs": "^6.0.5",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.2"
  }
}
