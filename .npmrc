# Enforce Node.js version constraints from package.json engines field
engine-strict=true

# NPM publishing configuration
# Note: NPM_TOKEN should be configured in CI environment only
# CI should run: pnpm config set //registry.npmjs.org/:_authToken $NPM_TOKEN
registry=https://registry.npmjs.org/
@uimatch:registry=https://registry.npmjs.org/

# Prevent workspace: protocol from leaking into published packages
link-workspace-packages=false
