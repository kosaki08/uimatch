{
  "name": "@uimatch/core",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typedoc": {
    "entryPoint": "src/index.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=20.19 <21 || >=22.12"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@uimatch/shared-logging": "workspace:*",
    "pixelmatch": "^6.0.0",
    "playwright": "^1.49.1",
    "pngjs": "^7.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/pixelmatch": "^5.2.6",
    "rimraf": "^6.0.1"
  }
